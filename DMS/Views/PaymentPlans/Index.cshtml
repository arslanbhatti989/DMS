@model IEnumerable<DMS.Models.ViewModels.PaymentPlansViewModel>
@{
    ViewData["Title"] = "Index";
}
<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        @Html.Raw(TempData["AlertMessage"])
        <!-- DataTable with Buttons -->
        <div class="card">
            @* <a asp-action="Create" class="btn btn-primary  mb-1" style="margin-bottom:20px; margin-top:10px; margin-left:25px; width:150px">Add New</a> *@
            <div class="card-body">
                <div class="card-datatable table-responsive text-nowrap">
                    <h4 style="color:navy;" class="text-md mb-3">Payment Plans</h4>
                    <div class="table-reponsive">
                        <table id="myTable" class="table table-row table-theme v-middle dataTable">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Installments</th>
                                    <th>View Installments</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Payment_Plan_Id
                                        </td>
                                        <td>
                                            @item.Plan_Name
                                        </td>
                                        <td>@item.TotalInstallments</td>
                                        <td>
                                            <a href="/paymentplans/installments/@item.Payment_Plan_Id">
                                                View
                                            </a>
                                        </td>
                                        <td>
                                            <a href="#" class="text-primary i-con-h-a"><i class="i-con i-con-edit"><i></i></i></a>
                                            <a href="#" class="text-danger i-con-h-a"><i class="i-con i-con-trash"><i></i></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
 {
    <script>
        $(document).ready(function () {
            $('#btnPaymentPlans').addClass("open");
            $('#btnManagePaymentPlans').addClass("active");
            $('#myTable').DataTable(); // Initialize DataTables

        });
    </script>
 }