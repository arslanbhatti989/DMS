@model DMS.Models.UnitType
@{
    ViewData["Title"] = Model.Unity_Type_Id == 0 ? "Add Unit Type" : "Edit Type";
}
<h2>@ViewData["Title"]</h2>
<form id="unitTypeForm" method="post">
    <input type="hidden" asp-for="Unity_Type_Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-12 mt-4">
            <div class="form-group">
                <label asp-for="Unity_Type_Name">Unit Type Name</label>
                <input asp-for="Unity_Type_Name" class="form-control" />
                <span asp-validation-for="Unity_Type_Name" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-12 mt-4">

            <div class="form-group">
                <label asp-for="Project_Id">Project</label>
                <select asp-for="Project_Id" asp-items="ViewBag.Project" class="form-control">
                    <option value="">Please Select</option> <!-- Optional default option -->
                </select>
                <span asp-validation-for="Project_Id" class="text-danger"></span>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 mt-4">
            <div class="form-group">
                <label asp-for="Unit_Type_Status">Status</label>
                <select asp-for="Unit_Type_Status" class="form-control">
                    <option value="true">Active</option>
                    <option value="false">InActive</option>
                </select>
                <span asp-validation-for="Unit_Type_Status" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12 mt-4">
            <div class="mt-4">

                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>


</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

