@model DMS.Models.Project_Seller


<div class="modal-body">
    <div class="container-fluid">
        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 col-form-label fw-bold text-muted">Company Name:</label>
            <div class="col-sm-8">
                <div class="form-control-plaintext ps-2 border-start border-3 border-primary">
                    @Model.Seller_Company_Name
                </div>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 col-form-label fw-bold text-muted">License Number:</label>
            <div class="col-sm-8">
                <div class="form-control-plaintext ps-2 border-start border-3 border-primary">
                    @Model.Seller_Company_License_Number
                </div>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 col-form-label fw-bold text-muted">License Expiry:</label>
            <div class="col-sm-8">
                <div class="form-control-plaintext ps-2 border-start border-3 border-primary">
                    @(Model.Seller_Company_Licence_Expiry?.ToString("yyyy-MM-dd") ?? "N/A")
                </div>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 col-form-label fw-bold text-muted">Company Address:</label>
            <div class="col-sm-8">
                <div class="form-control-plaintext ps-2 border-start border-3 border-primary">
                    @Model.Seller_Company_Address
                </div>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 col-form-label fw-bold text-muted">Authorized Signature Name:</label>
            <div class="col-sm-8">
                <div class="form-control-plaintext ps-2 border-start border-3 border-primary">
                    @Model.Authorized_Signature_Name
                </div>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 col-form-label fw-bold text-muted">Signature Designation:</label>
            <div class="col-sm-8">
                <div class="form-control-plaintext ps-2 border-start border-3 border-primary">
                    @Model.Authorized_Signature_Designation
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer bg-light">
    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
        <i class="bi bi-x-circle me-1"></i> Close
    </button>
</div>

<style>
    .form-control-plaintext {
        min-height: calc(1.5em + 0.75rem + 2px);
        padding-top: 0.375rem;
        padding-bottom: 0.375rem;
        margin-bottom: 0;
    }
</style>